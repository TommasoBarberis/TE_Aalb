    export PATH=/opt/:$PATH
    export REPET_PATH=/opt/PASTEC_linux-x64-2.0
    export PYTHONPATH=/opt/PASTEC_linux-x64-2.0/PASTEC:/opt/PASTEC_linux-x64-2.0/commons

